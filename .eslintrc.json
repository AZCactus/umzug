{
  "extends": [
    "standard"
  ],
  "globals": {
    "__dirname": true,
    "process": true
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-var": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}